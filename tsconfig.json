{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "lib": ["es2016", "es2019.array", "es2017.object", "esnext.asynciterable"]
  },
  "include": ["src/**/*", "test/**/*"]
}
